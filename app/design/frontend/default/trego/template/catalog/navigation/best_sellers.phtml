?>
<?php if($enable == 1) { ?>
<div class="block block-bestseller">
    <div class="block-title">
        <strong><span><?php echo Mage::getStoreConfig('filterproducts/bestseller/title',$code); ?></span></strong>
    </div>
    <div class="block-content">
